@model Employee

@{
    var photoPath = string.Empty;
    
   var showButtons = (bool)ViewData["Showbuttons"]; 
}

@if (!string.IsNullOrEmpty(Model.PhotoPath))
{
    photoPath = $"~/Images/{Model.PhotoPath}";
}
else
{
    photoPath = "~/Images/noimage.png";

}

@*var photoPath = $"~/Images/{employee.PhotoPath ?? "noimage.png"}";*@


    <div class="card m-3" style="min-width: 18rem; max-width:30.5%">

        <div class="card-header">
            <h3>@Model.Name</h3>
        </div>

        <img class="card-img-top imageThumbnail" src="@photoPath" asp-append-version="true" />

        @if (showButtons)
        {

            <div class="card-footer text-center">
                <a asp-page="/Employees/Details" asp-route-Id="@Model.Id" class="btn btn-primary m-1">View</a>
                <a asp-page="/Employees/Edit" class="btn btn-warning m-1" asp-route-Id="@Model.Id">Edit</a>
                <a asp-page="/Employees/Delete" asp-route-Id="@Model.Id" class="btn btn-danger m-1">Delete</a>
            </div>

        }


    </div>