@page
@model RazorPagesTutorial.IndexModel
@{
    ViewData["Title"] = "Employees";
    var photoPath = string.Empty;

}

<h1>Employees</h1>
<h3>@Model.Employees.Count()</h3>

<div class="card-deck">
    @foreach (var employee in Model.Employees)
    {
        @if (!string.IsNullOrEmpty(employee.PhotoPath))
            {
                photoPath = $"~/Images/{employee.PhotoPath}";
            }
            else
            {
                photoPath = "~/Images/noimage.png";

            }

       // var photoPath = $"~/Images/{employee.PhotoPath ?? "noimage.png"}";

        <div class="card m-3" style="min-width: 18rem; max-width:30.5%">

            <div class="card-header">
                <h3>@employee.Name</h3>
            </div>


            <img class="card-img-top imageThumbnail" src="@photoPath" asp-append-version="true" />


            <div class="card-footer text-center">
                <a href="#" class="btn btn-primary m-1">View</a>
                <a href="#" class="btn btn-warning m-1">Edit</a>
                <a href="#" class="btn btn-danger m-1">Delete</a>
            </div>

        </div>
    }

</div>

