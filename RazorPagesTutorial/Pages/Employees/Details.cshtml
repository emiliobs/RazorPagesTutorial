@page "/employees/view/{id:min(1)}"

@model RazorPagesTutorial.DetailsModel
@{

    ViewData["Title"] = "Details";
    var photoPath = string.Empty;

    <h1>Details</h1>
    <hr />
    <div class="row justify-content-center m-1">
        @if (Model.Message != null)
        {
            <div class="col-sm-8">
                <div class="alert alert-primary">
                    @Model.Message
                </div>
            </div> 
        }
    </div>

    if (!string.IsNullOrEmpty(Model.Employee.PhotoPath))
    {
        photoPath = $"~/Images/{Model.Employee.PhotoPath}";
    }
    else
    {
        photoPath = "~/Images/noimage.png";

    }

}


<div class="row justify-content-center m-1">
    <div class="col-sm-8">
        @await Component.InvokeAsync("HeadCount", new { department = Model.Employee.Department })
    </div>
    <div class="col-sm-8">
        <div class="card">
            
            <div class="card-header">
                <h1>@Model.Employee.Name</h1>
            </div>

            <div class="card-body text-center">
                <img class="card-img-top" src="@photoPath" asp-append-version="true" />

                <h4>Employee Id : @Model.Employee.Id </h4>
                <h4>Email : @Model.Employee.Email </h4>
                <h4>Department : @Model.Employee.Department </h4>

            </div>
            <div class="card-footer text-center">
                <a asp-page="index" class="btn btn-primary">Back</a>
                <a href="#" class="btn btn-info">Edir</a>
                <a href="#" class="btn btn-danger">Delete</a>
            </div>
        </div>
    </div>
</div>
